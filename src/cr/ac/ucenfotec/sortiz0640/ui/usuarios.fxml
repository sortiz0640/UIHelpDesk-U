                        <TableColumn fx:id="colNombre" prefWidth="120.0" text="Nombre" />
                        <TableColumn fx:id="colApellidos" prefWidth="120.0" text="Apellidos" />
                        <TableColumn fx:id="colCorreo" prefWidth="180.0" text="Correo" />
                        <TableColumn fx:id="colRol" prefWidth="100.0" text="Rol" />
                        <TableColumn fx:id="colAcciones" prefWidth="120.0" text="Acciones" />
