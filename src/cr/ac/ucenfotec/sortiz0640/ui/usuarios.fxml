                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <Label layoutX="93.0" layoutY="153.0" text="Operaciones" textFill="#6b7280">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Label>

                <!-- Botones de navegación -->
                <Button fx:id="btnRegresar" graphicTextGap="1.0" layoutX="37.0" layoutY="189.0" minHeight="20.0" mnemonicParsing="false" onAction="#regresarAlHome" prefHeight="31.0" prefWidth="216.0" style="-fx-background-color: #00a6fb; -fx-background-radius: 5;" text="← Regresar" textFill="WHITE" textOverrun="CLIP">
